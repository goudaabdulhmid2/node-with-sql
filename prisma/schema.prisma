// You can have multiple genrator
generator client {
  provider = "prisma-client-js"
}

// Yoc can only have one date source and must havea provider
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // filed | typeOfFiled "? mean is optional" | 
  id          Int             @id @default(autoincrement())
  email       String          @unique
  name        String?
  isAdmin     Boolean
  preferences Json
  blob        Bytes // for store somthing like file or big data
  blob1       Unsupported("")
}

model Post {
  // Desimal represent a much wider range
  id        Int      @id @default(autoincrement())
  rating    Float
  createdAt DateTime
  updatedAt DateTime
}
