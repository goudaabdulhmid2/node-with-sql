// You can have multiple genrator
generator client {
  provider = "prisma-client-js"
}

// Yoc can only have one date source and must havea provider
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // filed | typeOfFiled "? mean is optional" | 
  id             String          @id @default(uuid())
  email          String          @unique
  name           String?
  isAdmin        Boolean
  blob           Bytes // for store somthing like file or big data
  blob1          Unsupported("")
  writtenPosts   Post[]          @relation("writtenPosts") // you need to do this extra step if u have more than one relation
  favoritePosts  Post[]          @relation("favoritePosts")
  UserPreference UserPreference?
}

model UserPreference {
  id           String  @id @default(uuid())
  emailUpdates Boolean
  user         User    @relation(fields: [userId], references: [id])
  userId       String  @unique
}

model Post {
  // Desimal represent a much wider range
  id            String     @id @default(uuid())
  rating        Float
  createdAt     DateTime
  updatedAt     DateTime
  author        User       @relation("writtenPosts", fields: [authorId], references: [id])
  authorId      String
  favoritedBy   User?      @relation("favoritePosts", fields: [favoritedById], references: [id])
  favoritedById String?
  categories    Category[]
}

// m:m relation with post
model Category {
  id    String @id @default(uuid())
  posts Post[]
}
